@model EmpregosYoyota.Models.VerEmprego
@{
    ViewBag.Title = @Model.Titulo;
}

 <!-- Page Content -->
  <div class="container">

    <div class="row">

      <!-- Post Content Column -->
      <div class="col-lg-8">

        <!-- Title -->
        <h1 class="mt-4">@Model.Titulo</h1>

        <!-- Date/Time -->
        <p>Publicado em: @Model.DataPublicado</p>

        <hr>

        <!-- Preview Image -->
        <img class="img-fluid rounded" src="~/Content/img/empregos/@Model.Foto" alt="Emprego">

        <hr>

        <!-- Post Content -->
        <h3>Descrição:</h3>
        <p class="lead">@MvcHtmlString.Create(@Model.Descricao)</p>

        <p>Empresa: @Model.Empresa</p>
        <p>E-mail para a candidatura: @Model.Email </p>
        <p>Oportunidade válida até: @Model.DataExpira.ToShortDateString()</p>
        <hr>

      </div>

      <!-- Sidebar Widgets Column -->
      <div class="col-md-4">

        <!-- Categories Widget -->
        <div class="card my-4">
          <h5 class="card-header">Categorias</h5>
          <div class="card-body">
            <div class="row">
              <div class="col-lg-12">
                <ul class="list-unstyled mb-0">
                  <li>
                    <a href="#">Tudo</a>
                  </li>
                  <li>
                    <a href="#">Informática</a>
                  </li>
                  <li>
                    <a href="#">Frio e Climatização</a>
                  </li>
                </ul>
              </div>
            </div>
          </div>
        </div>

      </div>

    </div>
    <!-- /.row -->

  </div>
  <!-- /.container -->
